<!--搜索结果列表框-->
 <view wx:for="{{re}}" wx:key="_id" class="bus-list js_bus_list ">

   
      <view class="bus-list-item  ">
        <!--view class="bus-time">{{item._id}}</view-->
        <image class="bus-time" src="{{item.dish_picture}}"></image>
        <view class="tobooking"> 预订 </view>
        <view class="detail">
          <view class="detail1">
            <view class="start">
              <text class="icon-circle s-icon1"></text>{{item.dish_name}}</view>
            <view class="end">
              <text class="icon-circle s-icon2"></text>{{item.thumbs_up}}</view>
          </view>
          <view class="tags">
            <view>
              <text class="price">￥{{item.dish_price}}</text>
            </view>
            <view>
              <text class="countleft">{{item.reserved_number}}份</text>
            </view>
            <view>
              <text class="b-tags js_tags"></text>
            </view>
          </view>
        </view>
      </view>

  

  </view>

