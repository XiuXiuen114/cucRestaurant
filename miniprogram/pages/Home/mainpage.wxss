/* 搜索样式 */
.search_con{

  width: 80%;

  margin:20px auto;

}
.search_con .search_input{

  border: 1px solid rgb(214, 211, 211);
  margin:20px auto;
  height: 45px;

 
  border-radius: 100px;

  font-size: 17px;

  padding-left: 10px;/*此处要用padding-left才可以把光标往右移动15像素，不可以用text-indent*/

  color: #333;

}
.search_con .search_btn{

  margin-top: 15px;

  

  height: 45px;
  
  background: #56b273;

  color: #fff;

  border-radius: 100px;

}
.search_result{

  width: 80%;

  margin:10px auto;

}
.search_result .empty{

  text-align: center;

  color: #f00;

  font-size: 15px;

}

 

.search_result .noresult{

  text-align: center;

  color: #666;

  font-size: 15px;

}

 

.search_result .resname{

  text-align: left;

  color: #333;

  font-size: 15px;

}
