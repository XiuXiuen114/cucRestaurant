}
.mod-info{
            display: flex;
            flex-direction: column;
  height:40rpx;
}
.mod-icon{
            display: flex;
            flex-direction: row;
  width: 40rpx;
  height: 40rpx;
}
.icon{
            width: 40rpx;
  height: 40rpx;
}
.moinfont{
            font-size: 28rpx;
  text-indent: 60rpx;
