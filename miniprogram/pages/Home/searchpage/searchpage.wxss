/* pages/Home/searchpage/searchpage.wxss */
/* 搜索样式 */
.search{
  margin:20px auto;
  display:flex;
  flex-direction:row;
  padding-left:15rpx;
}
.search_input{
  border: 1px solid rgb(214, 211, 211);
  height: 35px;
  border-radius: 100px;
  font-size: 16px;
  padding-right: 10px;
  color: #333;
  width: 70%;
  padding-left: 40rpx;
}
.search_btn{
  height: 35px;
  background: #7BAFE2;
  color: #fff;
  border-radius: 50px;
  width: 18%;
  display:flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}
.search_result{
  width: 80%;
  margin:10px auto;
}
.search_result .empty{

  text-align: center;

  color: #f00;

  font-size: 15px;

}

 

.search_result .noresult{

  text-align: center;

  color: #666;

  font-size: 15px;

}

 

.search_result .resname{

  text-align: left;

  color: #333;

  font-size: 15px;

}
