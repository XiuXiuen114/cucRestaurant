<view wx:if="{{status == 1}}">
<view class="head" bindtap='loadPic'>
  <text class='text1'>头像</text>
  <image src="{{headPhoto}}" class='head_image' mode='scaleToFill'></image>
</view>

<view class="head" >
  <text class='text1'>昵称</text>
  <text class='user_name' bindtap='set_Name'>{{user_name}}</text>
  <image src="../../../../icon/youjiantou.png" class='image'></image>
</view>

<view class='head'>
  <text class='text1' bindtap='changePsd'>账户密码</text>
  <image src="../../../../icon/youjiantou.png" class='image2' bindtap='changePsd'></image>
</view>
</view>

<view wx:else>
<view class="head" bindtap='loadPic'>
  <text class='text1'>头像</text>
  <image src="{{shop_photo}}" class='head_image' mode='scaleToFill'></image>
</view>

<view class="head" >
  <text class='text1'>昵称</text>
  <text class='user_name' bindtap='set_Name'>{{shop_name}}</text>
  <image src="../../../../icon/youjiantou.png" class='image'></image>
</view>

<view class='head'>
  <text class='text1' bindtap='changePsd'>账户密码</text>
  <image src="../../../../icon/youjiantou.png" class='image2' bindtap='changePsd'></image>
</view>
</view>