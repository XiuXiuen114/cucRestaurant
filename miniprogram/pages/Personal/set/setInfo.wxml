
<view>
      <block wx:for="{{menuitems}}" wx:key="menu_for">
        <navigator url="{{item.url}}" class="lists">
        <view class='content'>
          <view class="listimg">
            <image src='{{item.icon}}'></image>
          </view>
          <text class='text'>{{item.text}}</text>
          <view class="arrows">
            <image src="{{item.arrows}}"></image>
          </view>
        </view>
        </navigator>
        <!-- 分割线 -->
       <view class="divLine"></view>
      </block>
  </view>

<view>
        <view class='content' bindtap='destroy'>
          <view class="listimg">
            <image src='../../../icon/index_icon.png'></image>
          </view>
          <text class='text'>注销账户</text>
        </view>
        <!-- 分割线 -->
       <view class="divLine"></view>
  </view>
 
<view class='exit' bindtap='exitLogin'>
    <text> 退出当前账号</text>
</view>
