/* miniprogram/pages/ShopManager/dishUpdate.wxss */
.list{
  margin-top: 15px;
  display: flex;
  flex-direction: row;
  width: 98%;
  margin-left: 1%;
  height: 80px;
  border-bottom: 1px solid #7BAFE2;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
}
.image{
  width: 70px;
  height: 70px;
  border-radius: 20%;
}
.column1{
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  font-size: 15px;
  vertical-align: center;
  color: grey;
  width: 55%;
}
.column2{
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  font-size: 15px;
  vertical-align: center;
  color: grey;
}
.button{
  display: flex;
  width: 48px;
  height: 25px;
  border: 1px solid #7BAFE2;
  color: #7BAFE2;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  padding: 0;
  margin-top: 40px;
}
.button2{
  display: flex;
  width: 70%;
  height: 50px;
  border: 1px solid #7BAFE2;
  color: #7BAFE2;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  margin-top: 80px;
  border-radius: 30rpx;
}